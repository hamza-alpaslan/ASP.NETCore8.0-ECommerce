@{
    ViewData["Title"] = "Shop";
}
@model e_commerce.Models.Entities.Product

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImgUrl" alt="Product Image" class="img-fluid">
        </div>

        <div class="col-md-6 ps-5">
            <h2>@Model.Name</h2>
            <p class="text-muted">Category: @Model.category</p>
            <div class=" mt-5 ps-1">
                <p class="lead">@Model.ShortDescription</p>

                <div class="mt-5">
                    <p>
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="Orange" class="bi bi-truck" viewBox="0 0 16 16">
                            <path d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5zm1.294 7.456A2 2 0 0 1 4.732 11h5.536a2 2 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456M12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2" />
                        </svg> Free Shipping
                    </p>
                    <h4 class="text-success">$ @Model.Price</h4>
                    @using (Html.BeginForm("AddCart", "Cart", FormMethod.Post))
                    {
                        @Html.HiddenFor(i => i.Id)
                        <div class="form-group mb-1">
                            <label for="quantity">Quantity</label>
                            <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Add to Cart</button>
                    }

                    
                </div>

            </div>

        </div>
    </div>

    <div class="mt-5">
        <h4>Description</h4>
        <p>@Model.Description</p>
    </div>
</div>