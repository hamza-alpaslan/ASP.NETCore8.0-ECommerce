<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - e_commerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="~/img/logo.png">
    <style>
        html, body {
            height: 100%;
        }
    </style>
</head>
<body style="background-color:#DFF2EB" class="d-flex flex-column">
    <nav class="navbar navbar-expand-lg" style="background-color: #4A628A">
        <div class="container">
            <a class="navbar-brand" href="~/Home">
                <img src="~/img/logo.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                E-Market
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <form class="container-fluid justify-content-start">
                    <a href="~/Home"><button class="btn btn-outline-light me-2" type="button">Home</button></a>
                    <a href="~/Product"><button class="btn btn-outline-light me-2" type="button">Shop</button></a>
                    <a href="~/Home/About"><button class="btn btn-outline-light me-2" type="button">About</button></a>
                </form>
                <div class="ms-auto d-flex align-items-center">
                    <!-- Cart Button -->
                    <a href="~/Cart" class="btn btn-outline-warning me-2 d-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cart3 me-2" viewBox="0 0 16 16">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l.84 4.479 9.144-.459L13.89 4zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                        </svg>
                        <span>Cart</span>
                    </a>
                    <!-- Order Button -->
                    <a href="~/Order" class="btn btn-outline-success d-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-bag-check me-2" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 1a2 2 0 0 0-2 2v1H2a1 1 0 0 0-1 1v9a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V5a1 1 0 0 0-1-1h-4V3a2 2 0 0 0-2-2zm3 3V3a3 3 0 1 0-6 0v1h6zM3 6v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V6H3zm7.854 3.354a.5.5 0 0 1-.708-.708L11.293 8l-1.147-1.146a.5.5 0 0 1 .708-.708l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5z" />
                        </svg>
                        <span>Orders</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>





    <div class="flex-grow-1">
        @RenderBody()
    </div>

    <div class="mt-auto" style="background-color:#4A628A">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a href="~/Home" class="nav-link px-2 text-body-secondary">Home</a></li>
                <li class="nav-item"><a href="~/Product" class="nav-link px-2 text-body-secondary">Shop</a></li>
                <li class="nav-item"><a href="~/Home/About" class="nav-link px-2 text-body-secondary">About</a></li>
            </ul>
            <p class="text-center text-body-secondary">A demo e-commerce project built with ASP.NET Core MVC and Entity Framework. For more: <a href="~/Home/About">About</a>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
